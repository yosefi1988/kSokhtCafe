<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:textDirection="rtl"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:text="پلاک ملی"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:background="@drawable/png_melli"
        android:layout_height="100dp">

        <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
            android:id="@+id/PBSjd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:color="#5da2e7"
            android:layout_centerInParent="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:radius="5dp"
            app:dd_animationDuration="900"
            app:dd_horizontalSpacing="8dp"
            app:dd_numDots="5"
            app:dd_scaleMultiplier="3" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayoutMeli"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="120dp">


        <ir.sajjadyosefi.kartsokhtcafebaazar.view.CustomEditText
            android:id="@+id/editText1"
            android:layout_width="70dp"
            android:layout_marginRight="5dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@null"
            android:singleLine = "true"
            android:hint="97"
            android:maxLength="2"
            android:textSize="42dp"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:inputType="number"  />


        <ir.sajjadyosefi.kartsokhtcafebaazar.view.CustomEditText
            android:id="@+id/editText2"
            android:layout_width="100dp"
            android:layout_marginRight="65dp"
            android:gravity="center"
            android:singleLine = "true"
            android:hint="567"
            android:maxLength="3"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:background="@null"
            android:inputType="number"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:textSize="42dp"  />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginRight="160dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <!--<ImageView-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/_spinner_ddl" />-->

        </RelativeLayout>

        <ir.sajjadyosefi.kartsokhtcafebaazar.view.CustomEditText
            android:id="@+id/editText3"
            android:layout_width="65dp"
            android:layout_marginRight="210dp"
            android:gravity="center"
            android:singleLine = "true"
            android:maxLength="2"
            android:hint="11"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:background="@null"
            android:inputType="number"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:textSize="42dp"  />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <ir.sajjadyosefi.kartsokhtcafebaazar.view.ButtonPlus
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/twitter"
            android:text="استعلام"
            android:textColor="#fff"
            android:textSize="25dp" />


    </LinearLayout>




</RelativeLayout>

